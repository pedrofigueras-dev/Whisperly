{
  "name": "Whisperly (Beta)",
  "description": "Contextual UX Copilot â€” capture your tab and show a UX/UI tip in a lightweight overlay.",
  "version": "0.1.0",
  "manifest_version": 3,
  "action": { "default_popup": "popup.html", "default_title": "Whisperly" },
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ]
}

